<Page x:Class="IVSwitcher.load_mod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IVSwitcher"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:properties="clr-namespace:IVSwitcher.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="load_mod" Loaded="Page_Loaded">

    <Grid>
        <Image Source="pack://application:,,,/Resources/icon.ico" Width="150" Height="150" Margin="50,50,600,250"/>
        <Grid Margin="220 120 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="IV Switcher" FontSize="50"/>
            <TextBlock Grid.Row="1" Text="{x:Static properties:Resources.main_mod_loading}"/>
            <TextBlock Grid.Row="2" Text="v0.0.0.0" HorizontalAlignment="Right" x:Name="version_label"/>
        </Grid>
        
        <ProgressBar
        IsIndeterminate="True" Margin="0,257,0,189" />
    </Grid>
</Page>
